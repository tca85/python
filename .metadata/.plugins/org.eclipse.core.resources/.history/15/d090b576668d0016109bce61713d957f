class Teste():

    def multiplicar_range_por_dois(self, numero):
        lista = []
        num = 0
        
        for p in range(1, numero + 1):
            num = p * 2
            lista.append(num)
            
        return lista
        
    def testar_resto_igual_zero(self, numero, divisor):
        for i in numero:
            if i % divisor == 0:
                print(i, '/3 = ', i / divisor)
            else:
                print(i, 'nao resta zero na divisao')

    def fatorial(self, n):
        n = n if n > 1 else 1
        j = 1
        
        for i in range(1, n + 1):
            j = j * i
            return j